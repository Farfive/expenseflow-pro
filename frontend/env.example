# Application Settings
NEXT_PUBLIC_APP_NAME="ExpenseFlow Pro"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Authentication
NEXT_PUBLIC_JWT_SECRET="your-super-secret-jwt-key-here"
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ACCEPTED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# PWA Settings
NEXT_PUBLIC_PWA_NAME="ExpenseFlow Pro"
NEXT_PUBLIC_PWA_SHORT_NAME="ExpenseFlow"
NEXT_PUBLIC_PWA_DESCRIPTION="Modern expense management for Polish businesses"

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=""
NEXT_PUBLIC_SENTRY_DSN=""

# Development
NODE_ENV="development"
ANALYZE="false"

# API Endpoints
NEXT_PUBLIC_OCR_ENDPOINT="/api/ocr/process"
NEXT_PUBLIC_UPLOAD_ENDPOINT="/api/files/upload"

# Feature Flags
NEXT_PUBLIC_FEATURE_OCR="true"
NEXT_PUBLIC_FEATURE_NOTIFICATIONS="true"
NEXT_PUBLIC_FEATURE_ANALYTICS="true"

# Theme
NEXT_PUBLIC_DEFAULT_THEME="light" 