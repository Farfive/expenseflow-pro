{{!-- Default PDF Export Template --}}
<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <style>
        body { 
            font-family: Arial, sans-serif; 
            margin: 20px; 
            color: #333;
        }
        .header {
            border-bottom: 3px solid #007bff;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        .header h1 {
            color: #007bff;
            margin: 0;
            font-size: 28px;
        }
        .header .subtitle {
            color: #666;
            font-size: 16px;
            margin-top: 5px;
        }
        .summary {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 30px;
        }
        .summary h3 {
            margin-top: 0;
            color: #495057;
        }
        .summary .stat {
            display: inline-block;
            margin-right: 30px;
            margin-bottom: 10px;
        }
        .summary .stat-label {
            font-weight: bold;
            color: #6c757d;
        }
        .summary .stat-value {
            font-size: 18px;
            color: #007bff;
            font-weight: bold;
        }
        table { 
            width: 100%; 
            border-collapse: collapse; 
            margin-bottom: 30px;
            font-size: 12px;
        }
        th { 
            background: #007bff; 
            color: white; 
            padding: 12px 8px;
            text-align: left;
            font-weight: bold;
        }
        td { 
            border: 1px solid #dee2e6; 
            padding: 10px 8px;
        }
        tr:nth-child(even) {
            background: #f8f9fa;
        }
        .amount {
            text-align: right;
            font-weight: bold;
        }
        .footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
            font-size: 11px;
            color: #6c757d;
        }
        .category {
            background: #e9ecef;
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 10px;
        }
        .project {
            color: #28a745;
            font-size: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{title}}</h1>
        <div class="subtitle">Generated on {{formatDate timestamp "DD MMMM YYYY [at] HH:mm"}}</div>
    </div>

    <div class="summary">
        <h3>Summary</h3>
        <div class="stat">
            <div class="stat-label">Total Records:</div>
            <div class="stat-value">{{metadata.recordCount}}</div>
        </div>
        <div class="stat">
            <div class="stat-label">Total Amount:</div>
            <div class="stat-value">{{formatCurrency (sum data "amount")}}</div>
        </div>
        <div class="stat">
            <div class="stat-label">Period:</div>
            <div class="stat-value">{{formatDate options.period.start "DD/MM/YYYY"}} - {{formatDate options.period.end "DD/MM/YYYY"}}</div>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Category</th>
                <th>Project</th>
                <th>Merchant</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            {{#eachWithIndex data}}
            <tr>
                <td>{{formatDate transactionDate "DD/MM/YYYY"}}</td>
                <td>{{description}}</td>
                <td>
                    {{#if category.name}}
                    <span class="category">{{category.name}}</span>
                    {{/if}}
                </td>
                <td>
                    {{#if project.name}}
                    <span class="project">{{project.name}}</span>
                    {{/if}}
                </td>
                <td>{{merchantName}}</td>
                <td class="amount">{{formatCurrency amount currency}}</td>
            </tr>
            {{/eachWithIndex}}
        </tbody>
    </table>

    <div class="footer">
        <p>Generated by ExpenseFlow Pro | Export ID: {{metadata.exportId}}</p>
        <p>This report contains {{metadata.recordCount}} transaction(s) for the period specified above.</p>
    </div>
</body>
</html> 